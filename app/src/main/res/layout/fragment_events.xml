<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/events_vp_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/white_1"
            app:tabIndicatorHeight="@dimen/events_tab_indicator_height"
            app:tabTextColor="@color/tab_inactive"
            app:tabBackground="@color/colorPrimary"
            app:tabSelectedTextColor="@color/text_white"
            app:tabMode="fixed"/>

    <androidx.viewpager.widget.ViewPager
            android:id="@+id/events_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</LinearLayout>